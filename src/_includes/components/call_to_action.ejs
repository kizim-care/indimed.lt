<%

    let cta_description = 'Į užklausą sureaguos tinkamiausias Jūsų atveju specialistas'

    if (typeof description !== 'undefined') {
        cta_description = description;
    }

    let steps = [
        {
            title: 'Jūs paliekate savo užklausą mūsų „IndiMed” specialistų draugijai',
            description: 'Tereikia 1 minutės Jūsų dėmesio bei laiko',
            icon: 'https://kizim-lt.b-cdn.net/indimed.lt/stopwatch%20-64.png',
        },
        {
            title: 'Jūsų užklausa operatyviai išnagrinėjama draugijos specialistų',
            description: 'Jūsų atvejo nagrinėjimas trunka nuo 5 iki 30 minučių',
            icon: 'https://kizim-lt.b-cdn.net/indimed.lt/timer-64.png',
        },
        {
            title: 'Su Jumis susisiekia tinkamiausias Jūsų atveju specialistas',
            description: 'Telefonu Jums suteikiama trumpa konsultacija ir gydymo rekomendacijos',
            icon: 'https://kizim-lt.b-cdn.net/indimed.lt/response-time-64.png',
        }
    ]
%>

<section class="px-8 py-32 bg-green-600" id="drasiai-kreipkites">
    <div class="container max-w-7xl mx-auto">
        <div class="text-left md:text-center">
            <%- include('./single/h3.ejs', {text: 'Laukiame jūsų užklausos 🤙'}) %>
            <%- include('./single/h2.ejs', {text: 'Išbandykite be įsipareigojimo'}) %>
            <div class="text-white lg:text-lg max-w-2xl m-auto mb-8">
                <%- cta_description %>
            </div>
        </div>

        <div class="grid gap-8 mt-14 lg:grid-cols-3">
            <% steps.forEach((step, index) => { %>
                <div class="flex flex-col items-center gap-4 justify-between px-6 py-6 md:px-8 md:py-12 bg-gray-100 rounded-xl">
                    <div
                        class="
                            p-1 border-4 border-green-600 rounded-full flex items-center justify-center w-12 h-12 lg:w-14 lg:h-14
                            <% if (index === 0) { %>
                                text-white bg-green-600
                            <% } else { %>
                                text-green-600
                            <% } %>
                        "
                    >
                        <span class="text-base font-bold lg:text-2xl"><%- index + 1 %></span>
                    </div>

                    <h4 class="font-bold md:text-xl text-gray-700 text-center"><%- step.title %></h4>

                    <div class="flex items-center py-2 gap-3 md:gap-4">
                        <img src="<%- step.icon %>" class="w-7">
                        <span class="font-medium text-gray-500"><%- step.description %></span>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="relative flex flex-col justify-center md:flex-row md:space-x-4 mt-14">
        <a href="#uzklausos-forma" class="flex items-center justify-center w-full px-6 py-3 text-lg text-black bg-white-500 rounded-md md:mb-0 hover:bg-gray-200 md:w-auto bg-white">
            Įdomu ir noriu išbandyti
            <svg class="w-6 h-6 ml-2" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11c.889-.086 1.416-.543 2.156-1.057a22.323 22.323 0 0 0 3.958-5.084 1.6 1.6 0 0 1 .582-.628 1.549 1.549 0 0 1 1.466-.087c.205.095.388.233.537.406a1.64 1.64 0 0 1 .384 1.279l-1.388 4.114M7 11H4v6.5A1.5 1.5 0 0 0 5.5 19v0A1.5 1.5 0 0 0 7 17.5V11Zm6.5-1h4.915c.286 0 .372.014.626.15.254.135.472.332.637.572a1.874 1.874 0 0 1 .215 1.673l-2.098 6.4C17.538 19.52 17.368 20 16.12 20c-2.303 0-4.79-.943-6.67-1.475"/>
              </svg>
              
        </a>
    </div>
</section>