<%
    let selfTextPosition = 'right'
    let selfBgColor = 'bg-white'

    if (typeof textPosition !== 'undefined' && textPosition === 'left') {
        selfTextPosition = 'left'
    }

    if (typeof bgColor !== 'undefined' && bgColor === 'gray') {
        selfBgColor = 'bg-neutral-100'
    }
%>
<section class="px-8 py-32 <%- selfBgColor %>" id="<%- id %>">
    <div class="items-center max-w-7xl mx-auto">
        <div class="grid md:grid-cols-2 items-center gap-10 md:gap-20">
            <div
                <% if (selfTextPosition === 'left') { %>
                class="md:order-2"
                <% } %>
            >
                <img src="<%- image %>" alt="<%- title %>">
            </div>
            <div>
                <p class="font-medium text-gray-400 uppercase mb-2"><%- subtitle %></p>
                <h4 class="font-extrabold text-gray-900 text-2xl md:text-3xl mb-4">
                    <%- title %>
                </h4>

                <p class="mx-auto text-base text-gray-600 lg:text-lg mb-6"><%- text %></p>
                <div class="relative flex flex-col sm:flex-row sm:space-x-4">
                    <a href="#_" class="flex items-center w-full px-6 py-3 mb-3 text-lg text-white bg-green-600 rounded-md sm:mb-0 hover:bg-green-700 sm:w-auto" data-primary="indigo-600" data-rounded="rounded-md"> Palikti užklausą draugijai 
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
