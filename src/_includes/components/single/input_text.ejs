<%
    let randomId = Math.random().toString(36).substring(2, 15) + Math.random().toString(36).substring(2, 15);
%>

<div>
    <label for="<%- randomId %>" class="block text-sm font-semibold mb-2 text-neutral-600"><%- label  %><span class="text-rose-400">*</span></label>
    <div class="relative">
        <input
            id="<%- randomId %>"
            type="<%- type %>"
            name="<%- name %>"
            placeholder="<%- typeof placeholder === 'undefined' ? '' : placeholder %>"
            class="base-input border border-neutral-300 ps-11"
        >
        <div class="absolute inset-y-0 start-0 flex items-center pointer-events-none z-20 ps-4 text-gray-400">
            <%- icon %>
        </div>
    </div>
</div>
